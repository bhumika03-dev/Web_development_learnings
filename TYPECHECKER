<body>
  <main class="wrap" aria-labelledby="page-title">
    <header>
      <h1 id="page-title" class="title">Type Smarter</h1>
      <p class="subtitle">See your words come alive in real‑time </p>
    </header>

    <section class="card" aria-labelledby="composer-label">
      <div>
        <label id="composer-label" class="label" for="composer">Your Message</label>
        <textarea id="composer" name="message" placeholder="Start typing here…" maxlength="280" aria-describedby="limit-note"></textarea>
        <p id="limit-note" class="limit-hint">Hard limit: 280 characters </p>
      </div>

      <div class="badges" role="status" aria-live="polite">
        <div class="left">
          <span class="badge"><span class="dot"></span> Typed: <span id="typedc">0</span></span>
          <span class="badge green" ><span class="dot"></span> Left: <span id="leftc">280</span> </span>
          <span class="badge" ><span class="dot"></span> Words: <span id="wordst">0</span></span>
        </div>
        <div class="cta">
          
          <button class="btn" type="button" title="This is a visual-only prototype">Clear</button>
        </div>
      </div>
    </section>

    <footer>
      Built for a clean handoff
    </footer>
  </main>
  <script>
    let inp=document.querySelector("textarea");
    let typedc=document.querySelector("#typedc");
    let leftc=document.querySelector("#leftc");
    let wordst=document.querySelector("#wordst");
    let btn=document.querySelector(".btn");
    inp.addEventListener("input",function(data){
        console.log("typed");
      typedc.textContent=inp.value.length;
       leftc.textContent=280 - inp.value.length;
       let trimmed=inp.value.trim();
       
       if(trimmed === ""){
        wordst.textContent=0;

       }
       else{
        let words=trimmed.split(/\s+/);
        wordst.textContent=words.length;
       }
    });
    btn.addEventListener("click",function(){
        inp.value = "";
        typedc.textContent=0;
        leftc.textContent=280;
        wordst.textContent=0;
    })
    

  </script>
</body>
